rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper to check admin role
    function isAdmin() {
      return request.auth != null
        && get(
          /databases/$(database)/documents/users/$(request.auth.uid)
        ).data.role == 'admin';
    }

    // Meta collection for connection tests
    match /meta/{document} {
      allow read: if true;
      allow write: if false;
    }

    // Users collection: each user reads only their own doc; no client writes
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Parties: any authenticated user can read, only admin can write
    match /parties/{partyId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Bilties collection
    match /bilties/{biltyId} {
      // Any authenticated user can read
      allow read: if request.auth != null;

      // Only admins can create/update/delete
      allow create, update, delete: if isAdmin();
    }

    // Bilty Public Links collection for shareable tracking links
    match /biltyPublicLinks/{linkId} {
      // Allow authenticated admin users to create public links
      allow create: if isAdmin();
      
      // Allow anyone to read public links (needed for public tracking page)
      allow read: if true;
      
      // No updates or deletes needed for this collection
      allow update, delete: if false;
    }

    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
